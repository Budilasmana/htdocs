<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/welcome"
        android:layout_width="446dp"
        android:layout_height="300dp"
        android:layout_gravity="center"
        android:layout_marginTop="100dp"
        android:src="@drawable/ic_undraw_add_to_cart_vkjp" />

    <TextView
        android:id="@+id/thehoax"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/mblack"
        android:paddingRight="60dp"
        android:text="The Hoax Team"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="0dp"
        android:fontFamily="@font/mlight"
        android:text="Aplikasi untuk penjualan pulsa tentunya akan mempermudah seorang client"
        android:textSize="20dp" />

    <Button
        android:id="@+id/mulai"
        android:onClick="openacti"
        android:background="@drawable/button"
        android:text="Mulai"
        android:textColor="#FFF"
        android:fontFamily="@font/mblack"
        android:textSize="20dp"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="40dp"
        android:layout_gravity="center_vertical|center_horizontal" />


</LinearLayout>